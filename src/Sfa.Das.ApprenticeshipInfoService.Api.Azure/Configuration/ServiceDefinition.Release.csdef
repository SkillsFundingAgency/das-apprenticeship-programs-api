<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="Sfa.Das.ApprenticeshipInfoService.Api.Azure" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition" schemaVersion="2015-04.2.6">
  <WebRole name="Sfa.Das.ApprenticeshipInfoService.Api" vmsize="Standard_D2_v2">
    <Sites>
      <Site name="Web">
        <Bindings>
          <Binding name="Endpoint1" endpointName="Endpoint1" />
          <Binding name="Endpoint2" endpointName="Endpoint2" />
        </Bindings>
      </Site>
    </Sites>
    <ConfigurationSettings>
      <Setting name="AchievementRateDataBaseConnectionString" />
      <Setting name="ElasticServerUrls" />
      <Setting name="EnvironmentName" />
      <Setting name="ga.trackingid" />
      <Setting name="ElasticsearchUsername" />
      <Setting name="ElasticsearchPassword" />
      <Setting name="FeatureToggle.Elk5Feature" />
      <Setting name="FeatureToggle.GaApiAnalyticsFeature" />
      <Setting name="FeatureToggle.IgnoreSslCertificateFeature" />
      <Setting name="LoggingRedisConnectionString" />
      <Setting name="ApprenticeshipIndexAlias" />
      <Setting name="ProviderIndexAlias" />
      <Setting name="AssessmentOrgsIndexAlias" />
      <Setting name="FrameworksExpiredRequired" />
      <Setting name="StandardsExpiredRequired" />
      <Setting name="AllowedCorsUrls" />
    </ConfigurationSettings>
    <Endpoints>
      <InputEndpoint name="Endpoint1" protocol="http" port="80" loadBalancer="das-fatapi-ilb"/>
      <InputEndpoint name="Endpoint2" protocol="https" port="443" certificate="WebSslCert" loadBalancer="das-fatapi-ilb"/>
    </Endpoints>
    <Certificates>
      <Certificate name="WebSslCert" storeLocation="LocalMachine" storeName="My" />
    </Certificates>
  </WebRole>
</ServiceDefinition>
